<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<GridPane fx:controller="prob3.AddressForm"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10"
          vgap="10">

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Label text="Name"
           GridPane.columnIndex="0"
           GridPane.rowIndex="0"/>
    <TextField
            id="nameTextField"
            fx:id="nameTextField"
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"/>

    <Label text="Street"
           GridPane.columnIndex="2"
           GridPane.rowIndex="0"/>
    <TextField
            id="streetTextField"
            fx:id="streetTextField"
            GridPane.columnIndex="2"
            GridPane.rowIndex="1"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"/>

    <Label text="City"
           GridPane.columnIndex="4"
           GridPane.rowIndex="0"/>
    <TextField
            id="cityTextField"
            fx:id="cityTextField"
            GridPane.columnIndex="4"
            GridPane.rowIndex="1"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"/>

    <Label text="State"
           GridPane.columnIndex="1"
           GridPane.rowIndex="2"/>
    <TextField
            id="stateTextField"
            fx:id="stateTextField"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"/>

    <Label text="Zip"
           GridPane.columnIndex="3"
           GridPane.rowIndex="2"/>
    <TextField
            id="zipTextField"
            fx:id="zipTextField"
            GridPane.columnIndex="3"
            GridPane.rowIndex="3"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"/>


    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="2"
          GridPane.rowIndex="7"
          GridPane.columnSpan="2"
          GridPane.rowSpan="1">
        <Button text="Submit"
                onAction="#handleSubmitButtonAction"/>
    </HBox>

    <Text fx:id="actiontarget"
          GridPane.columnIndex="1" GridPane.rowIndex="6"/>

</GridPane>
